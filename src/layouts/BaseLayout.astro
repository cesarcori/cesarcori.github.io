---
import "../styles/global.css";
import { SITE_TITLE_DEFAULT } from "../consts";

import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const { pageTitle = SITE_TITLE_DEFAULT } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/logo-cc.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle}</title>
	</head>
	<body>
		<Header />
		<main class="max-sm:mt-8">
			<slot />
		</main>
		<Footer />
	</body>
</html>
