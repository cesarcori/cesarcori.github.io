---
import "../styles/global.css";
import { SITE_TITLE_DEFAULT } from "../consts";

import type { CollectionEntry } from "astro:content";
// import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
// import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";

type Props = CollectionEntry<"blog">["data"];

const {
  pageTitle = SITE_TITLE_DEFAULT,
  title,
  description,
  pubDate,
  updatedDate,
  heroImage,
} = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/logo-cc.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
  </head>

  <body>
    <Header />
    <main class="max-sm:mt-8">
      <article>
        <div class="hero-image">
          {heroImage && <img width={520} src={heroImage} alt="" />}
        </div>
        <div class="prose">
          <div class="title mb-4">
            <h1>{title}</h1>
            <div class="date text-center mb-2">
              <FormattedDate date={pubDate} />
              <!-- {
                updatedDate && (
                  <div class="last-updated-on">
                    {/* Last updated on <FormattedDate date={updatedDate} /> */}
                  </div>
                )
              } -->
            </div>
          </div>
          <slot />
        </div>
      </article>
    </main>
    <!-- <Footer /> -->
  </body>
</html>
